<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="custService"
		class="com.java.customer.service.CustomerService" />
	<bean id="custController"
		class="com.java.customer.controller.CustomerController">
		<property name="customerService" ref="custService" />
	</bean>

	<bean id="custDelete"
		class="com.java.customer.dao.CustomerDeleteData" />
	<bean id="custInput"
		class="com.java.customer.dao.CustomerInputData" />
	<bean id="custPrint"
		class="com.java.customer.dao.CustomerPrintData" />
	<bean id="custUpdate"
		class="com.java.customer.dao.CustomerUpdateData" />
		
